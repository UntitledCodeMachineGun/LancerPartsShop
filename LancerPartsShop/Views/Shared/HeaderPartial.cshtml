<header>
    <!-- nav-1 -->
    <nav class="navbar navbar-expand-lg navbar-light border-bottom">
        <div class="container-fluid col-10">
            <a class="navbar-brand">@Config.CompanyName</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link disabled">Mon-Fri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">9:00-21:00</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Контакты
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="tel:@Config.CompanyPhoneShort">@Config.CompanyPhone</a></li>
                            <li><a class="dropdown-item" href="mailto:@Config.CompanyEmail">@Config.CompanyEmail</a></li>
                        </ul>
                    </li>
                </ul>
                @*----------------Search form--------------------*@
                <form asp-controller="Search" asp-action="SearchResult" method="get" class="d-flex">
                    <input class="form-control me-2" type="search" name="query" placeholder="Поиск" aria-label="Search">
                    <input class="btn btn-outline-warning" type="submit" value="Найти" />
                </form>
            </div>
        </div>
    </nav>
    <!-- nav-2 -->
    <nav class="navbar nav-2 navbar-expand-lg navbar-light ">
        <div class="container-fluid col-10">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item border-end">
                        <a class="nav-link header-link @Html.IsActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                    </li>
                    <li class="nav-item border-end">
                        <a class="nav-link header-link @Html.IsActive("Blog", "Blog")" asp-area="" asp-action="Index" asp-controller="Blog" asp-route-id="">Блог</a>
                    </li>
                    <li class="nav-item border-end">
                        <a class="nav-link header-link @Html.IsActive("Contacts", "Contacts")" asp-area="" asp-action="Index" asp-controller="Contacts" asp-route-id="">Контакти</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
